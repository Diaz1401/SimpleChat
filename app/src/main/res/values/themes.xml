<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SimpleChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize dark theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorPrimaryLight</item>
    </style>

    <style name="CustomText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/background_input_light</item>
    </style>

    <style name="CustomTextClick" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimaryLighter</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="Theme.SimpleChat" parent="Base.Theme.SimpleChat" />
</resources>