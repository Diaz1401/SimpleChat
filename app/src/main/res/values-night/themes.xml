<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SimpleChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize dark theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/background_input_dark</item>
    </style>

    <style name="CustomTextClick" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimaryLighter</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>